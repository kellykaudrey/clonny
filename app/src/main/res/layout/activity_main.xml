<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/image_1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
             />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please fill in a few details below"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name*"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:id="@+id/txt_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Type your name here"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
             />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email*"
            app:layout_constraintTop_toBottomOf="@+id/txt_nama"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_marginTop="5dp"
            android:hint="Type your email here"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number*"
            app:layout_constraintTop_toBottomOf="@+id/txt_email"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/txt_nohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:hint="Type your phone number here"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
             />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password*"
            app:layout_constraintTop_toBottomOf="@+id/txt_nohp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/txt_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Type your password here"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
             />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password*"
            app:layout_constraintTop_toBottomOf="@+id/txt_pass"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/txt_conf_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Retype your password here"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            />

        <ImageButton
            android:id="@+id/btn_regis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_conf_pass"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:srcCompat="@drawable/next_btn" />

